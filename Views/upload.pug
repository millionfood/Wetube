extends Layout/main

block content
    .form_container 
        .record-container#jsRecorderContainer
            video#jsVideoPreview
            button#jsRecordBtn Start Recording
        form(action=`/videos${routes.upload}`,method='post',enctype='multipart/form-data')
            div.fileUpload
                label(for='file') Video File
                input(type='file', id='file',name='videoFile',required=true,accept='video/*')
            input(type='text', placeholder='Tile',name='title',required=true)
            input(type='text', placeholder='Description',name='description',required=true)
            input(type='submit',value='Upload Videos')

        
        