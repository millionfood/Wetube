mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer-controls   
            .videoPlayer-column 
                span#jsVolumeButton
                    i.fas.fa-volume-down
                span 
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
                input.videoPlayer-volume#jsVolume(type='range',min='0',max='1',step='0.1', value='0.5')
            .videoPlayer-column 
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer-column 
                span#jsFullScreen
                    i.fas.fa-expand